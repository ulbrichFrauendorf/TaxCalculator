@using TaxCalculatorFrontend.TaxCalculator.Models
@model CaptureTaxModel

<div class="modal fade" tabindex="-1" role="dialog" id="taxcalc-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="form-taxCalc">
                <div class="modal-header">
                    <h5 class="modal-title">Tax Submission</h5>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" asp-for="PostalCode" class="form-control">
                        <label asp-for="PostalCode"></label>
                        <select id="PostalCodeSelect"  class="form-control" onchange="updateInput()">
                            <option>Choose a Postal Code</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="AnnualIncome"></label>
                        <input type="number" asp-for="AnnualIncome" class="form-control">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" data-bs-dismiss="modal" id="submit-taxcalc">Calculate Tax</button>
                </div>
            </form>
        </div>
    </div>
</div>